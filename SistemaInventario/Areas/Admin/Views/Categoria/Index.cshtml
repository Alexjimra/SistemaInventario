
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary"> Lista de categorias</h2>
    </div>

    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fa-solid fa-plus"></i>&nbsp&nbspCrear Nueva categoria</a>
    </div>
</div>

<br />

<div class="p-4 border rounded">

    <table id="tblDatos" class="table table-striped @*table-bordered*@" style="width:100%">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Estado</th>
                <th> </th>
            </tr>
        </thead>

    </table>
</div>


@section Scripts{
    <script src="~/js/categoria.js"></script>
}